<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dashboardFragment">

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.globallogic.thespaceapp.presentation.dashboard.DashboardFragment"
        android:label="DashboardFragment"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_dashboardFragment_to_roadsterDetailsFragment"
            app:destination="@id/roadsterDetailsFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_upcomingLaunchesFragment"
            app:destination="@id/upcomingLaunchesFragment" />
    </fragment>
    <fragment
        android:id="@+id/roadsterDetailsFragment"
        android:name="com.globallogic.thespaceapp.presentation.roadster.RoadsterDetailsFragment"
        android:label="RoadsterDetailsFragment"
        tools:layout="@layout/fragment_roadster_details" />
    <fragment
        android:id="@+id/upcomingLaunchesFragment"
        android:name="com.globallogic.thespaceapp.presentation.launches.UpcomingLaunchesFragment"
        android:label="UpcomingLaunchesFragment"
        tools:layout="@layout/fragment_launches" />
</navigation>